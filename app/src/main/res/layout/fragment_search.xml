<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.SearchFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:layout_margin="15dp"
                android:id="@+id/search_search_btn"
                app:layout_constraintRight_toLeftOf="@+id/search_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Spinner
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:id="@+id/search_category"
                android:layout_margin="10dp"
                app:layout_constraintRight_toLeftOf="@+id/search_search_edit"
                app:layout_constraintLeft_toRightOf="@+id/search_search_btn"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="내용을 입력해주세요"
                android:background="#ffffff"
                android:id="@+id/search_search_edit"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/search_category"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고수님! 초보를 도와주세요!"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/search_title"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/search_search_edit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="더보기 >"
                android:id="@+id/search_more"
                android:layout_margin="10dp"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_title"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#A7E7EF"
                android:id="@+id/search_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/search_more"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>