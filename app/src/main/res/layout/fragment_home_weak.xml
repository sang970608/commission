<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.HomeWeakFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 하이랭크 추천 그림"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:id="@+id/home_high_text"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="@+id/scroll"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기 ->"
                    android:id="@+id/home_high_more"
                    android:layout_margin="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scroll"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="20dp"
                    android:id="@+id/home_high_recycle"
                    app:layout_constraintTop_toBottomOf="@+id/home_high_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 미들랭크 추천 그림"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:id="@+id/home_middle_text"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/home_high_recycle"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기 ->"
                    android:id="@+id/home_middle_more"
                    android:layout_margin="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_high_recycle"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="20dp"
                    android:id="@+id/home_middle_recycle"
                    android:background="#123456"
                    app:layout_constraintTop_toBottomOf="@+id/home_middle_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 로우랭크 추천 그림"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:id="@+id/home_low_text"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/home_middle_recycle"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기 ->"
                    android:id="@+id/home_low_more"
                    android:layout_margin="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_middle_recycle"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="20dp"
                    android:id="@+id/home_low_recycle"
                    android:background="#123456"
                    app:layout_constraintTop_toBottomOf="@+id/home_low_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>