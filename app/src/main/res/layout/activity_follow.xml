<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/follow_menu_btn"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:id="@+id/follow_follower_btn"
                android:background="#34eeee"
                android:textColor="#000000"
                android:text="팔로워"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:id="@+id/follow_following_btn"
                android:background="#ffffff"
                android:textColor="#000000"
                android:text="팔로잉"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/follow_search"
            app:layout_constraintTop_toBottomOf="@id/follow_menu_btn">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:id="@+id/follow_search_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="친구 닉네임을 입력해주세요"
                app:layout_constraintTop_toBottomOf="@+id/follow_menu_btn"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:background="#ffffff"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/follow_search"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>