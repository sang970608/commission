<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/board_item_ssum"
            android:src="@drawable/kawai"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="닉네임"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/board_item_nick"
            app:layout_constraintLeft_toRightOf="@+id/board_item_ssum"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그림명"
            android:id="@+id/board_item_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board_item_ssum"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="10dp"
            android:src="@drawable/kawai"
            android:id="@+id/board_item_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board_item_title"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/like"
            android:layout_margin="5dp"
            android:id="@+id/board_item_like"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board_item_img"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"
            android:id="@+id/board_item_comment"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toRightOf="@+id/board_item_like"
            app:layout_constraintTop_toBottomOf="@+id/board_item_img"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share"
            android:layout_margin="5dp"
            android:id="@+id/board_item_share"
            app:layout_constraintLeft_toRightOf="@+id/board_item_comment"
            app:layout_constraintTop_toBottomOf="@+id/board_item_img"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mark"
            android:layout_margin="5dp"
            android:id="@+id/board_item_mark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board_item_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>