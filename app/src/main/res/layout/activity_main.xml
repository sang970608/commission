<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/home_menubar"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="금주의 그림"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_margin="5dp"
                    android:background="#3498DB"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="최근 그림"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="찜한 그림"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="사진 올리기"
            android:background="#3498DB"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-10dp"
            android:id="@+id/home_upload_btn"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/home_menubar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/home_upload_btn">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 하이랭크 추천 그림"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:id="@+id/home_high_text"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="@+id/scroll"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기 ->"
                    android:id="@+id/home_high_more"
                    android:layout_margin="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/scroll"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="20dp"
                    android:id="@+id/home_high_recycle"
                    android:background="#123456"
                    app:layout_constraintTop_toBottomOf="@+id/home_high_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 미들랭크 추천 그림"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:id="@+id/home_middle_text"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/home_high_recycle"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기 ->"
                    android:id="@+id/home_middle_more"
                    android:layout_margin="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_high_recycle"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="20dp"
                    android:id="@+id/home_middle_recycle"
                    android:background="#123456"
                    app:layout_constraintTop_toBottomOf="@+id/home_middle_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 로우랭크 추천 그림"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:id="@+id/home_low_text"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/home_middle_recycle"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="더보기 ->"
                    android:id="@+id/home_low_more"
                    android:layout_margin="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_middle_recycle"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="20dp"
                    android:id="@+id/home_low_recycle"
                    android:background="#123456"
                    app:layout_constraintTop_toBottomOf="@+id/home_low_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#3498DB"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/home"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/search"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/off"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/offer"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/mypage"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>