<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:layout_height="400dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커미션 추가"
            android:textSize="30sp"
            android:id="@+id/commision_title"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커미션명"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/commision_name_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/commision_name_edit"
            app:layout_constraintTop_toBottomOf="@+id/commision_title"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/commision_name_edit"
            android:background="@drawable/edit_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/commision_option_text"
            app:layout_constraintTop_toBottomOf="@+id/commision_name_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/commision_option_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/commision_option_edit"
            app:layout_constraintTop_toBottomOf="@+id/commision_name_edit"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_border"
            android:id="@+id/commision_option_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/commision_price_text"
            app:layout_constraintTop_toBottomOf="@+id/commision_option_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/commision_price_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/commision_price_edit"
            app:layout_constraintTop_toBottomOf="@+id/commision_option_edit"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="숫자만 입력해주세요"
            android:inputType="number"
            android:background="@drawable/edit_border"
            android:id="@+id/commision_price_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/commision_btn"
            app:layout_constraintTop_toBottomOf="@+id/commision_price_text"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="#3498ed"
            android:id="@+id/commision_btn"
            android:text="추가"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>